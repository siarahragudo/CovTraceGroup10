<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/etmunicipal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:text="Municipalities"
        android:textColor="#000000"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/etPangasinan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:text="Pangasinan"
        android:textSize="20dp"
        android:textColor="#000000">
    </TextView>

    <Button
        android:id="@+id/btnLaoac"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:text="Laoac"
        android:background="#61AD74">
    </Button>

    <Button
        android:id="@+id/btnLingayen"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#61AD74"
        android:layout_marginTop="5dp"
        android:text="Lingayen">
    </Button>

    <Button
        android:id="@+id/btnMabini"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#61AD74"
        android:layout_marginTop="5dp"
        android:text="Mabini">
    </Button>

    <Button
        android:id="@+id/btnMalasiqui"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#61AD74"
        android:layout_marginTop="5dp"
        android:text="Malasiqui">
    </Button>

    <Button
        android:id="@+id/btnManaoag"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#61AD74"
        android:layout_marginTop="5dp"
        android:text="Manaoag">
    </Button>
    <Button
        android:id="@+id/btnMangaldan"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#61AD74"
        android:layout_marginTop="5dp"
        android:text="Mangaldan">
    </Button>

    <Button
        android:id="@+id/btnback"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:background="#00ff00"
        android:text="Back"
        android:layout_below="@id/btnBolinao"
        />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@id/btnBolinao"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:background="#00ff00"
        android:text="Next" />


</LinearLayout>