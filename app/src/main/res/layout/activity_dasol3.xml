<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="May 24, 2020"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#FF0000"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/id"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Dasol"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/btn4"
        />



    <Button
        android:id="@+id/btnpui"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="100dp"
        android:text="Total of PUI"
        android:background="#00FF00"
        android:layout_below="@id/id" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/btnpui"
        android:textStyle="bold"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/btnrec"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:text="Recovered"
        android:background="#00FF00"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/id" />

    <TextView
        android:id="@+id/btn0"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="20dp"
        android:layout_marginLeft="190dp"
        android:layout_below="@id/btnrec"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_below="@id/id"
        android:background="#00FF00"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Died" />

    <TextView
        android:id="@+id/btn2"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="20dp"
        android:layout_marginLeft="340dp"
        android:layout_below="@id/btnrec"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btncon"
        android:layout_width="200dp"
        android:background="#00FF00"
        android:layout_height="55dp"
        android:layout_below="@id/btn0"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:text="Total of Confirmed Case"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/btn3"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="20dp"
        android:layout_marginLeft="190dp"
        android:layout_below="@id/btncon"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:layout_marginTop="0dp"
        android:textColor="#000000"
        android:text="Lock Down"
        android:background="#FF0000"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnback"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:background="#00FF00"
        android:layout_below="@+id/btnlock"/>


</RelativeLayout>